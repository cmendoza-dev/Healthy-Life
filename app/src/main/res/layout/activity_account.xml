<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="20dp"
    android:paddingTop="20dp"
    android:paddingEnd="20dp"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/account"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <TextView
        android:layout_marginTop="40dp"
        android:layout_marginBottom="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:textSize="15sp"
        android:text="@string/name"
        android:textStyle="bold"

        />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:backgroundTint="@color/white"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="13dp"
        app:cardCornerRadius="3dp"
        app:cardElevation="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="15dp"
            android:textSize="16sp"
            android:text="Carlos"
            android:textStyle="bold"
            />
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_marginTop="15dp"
        android:layout_marginBottom="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:textSize="15sp"
        android:text="@string/last_name"
        android:textStyle="bold"

        />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:backgroundTint="@color/white"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="13dp"
        app:cardCornerRadius="3dp"
        app:cardElevation="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="15dp"
            android:textSize="16sp"
            android:text="Mendoza Solis"
            android:textStyle="bold"
            />
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_marginTop="15dp"
        android:layout_marginBottom="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:textSize="15sp"
        android:text="@string/dni"
        android:textStyle="bold"

        />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:backgroundTint="@color/white"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="13dp"
        app:cardCornerRadius="3dp"
        app:cardElevation="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="15dp"
            android:textSize="16sp"
            android:text="62228372"
            android:textStyle="bold"

            />
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_marginTop="15dp"
        android:layout_marginBottom="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:textSize="15sp"
        android:text="@string/address"
        android:textStyle="bold"
        android:textColor="@color/black"

        />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:backgroundTint="@color/white"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="13dp"
        app:cardCornerRadius="3dp"
        app:cardElevation="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="15dp"
            android:textSize="16sp"
            android:text="Ubr. Buenos Aires Sur"
            android:textStyle="bold"
            android:textColor="@color/black"
            />
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_marginTop="15dp"
        android:layout_marginBottom="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:textSize="15sp"
        android:text="@string/edu"
        android:textStyle="bold"
        android:textColor="@color/black"

        />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:backgroundTint="@color/white"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="13dp"
        app:cardCornerRadius="3dp"
        app:cardElevation="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="15dp"
            android:textSize="16sp"
            android:text="carlos.mendoza.s@tecsup.edu.pe"
            android:textStyle="bold"
            android:textColor="@color/black"
            />
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_marginTop="15dp"
        android:layout_marginBottom="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:textSize="15sp"
        android:text="@string/password"
        android:textStyle="bold"
        android:textColor="@color/black"

        />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:backgroundTint="@color/white"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="13dp"
        app:cardCornerRadius="3dp"
        app:cardElevation="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="15dp"
            android:textSize="16sp"
            android:text="12345678"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:inputType="textPassword"
            />
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btnBoton"
        android:text="@string/save"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:backgroundTint="@color/lila_544"
        android:layout_marginTop="35dp"
        android:layout_marginStart="15dp"
        />



</LinearLayout>